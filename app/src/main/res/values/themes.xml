<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectEESA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/wheat</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/darker_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="general_text_style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="general_card_style">
        <item name="android:background">#FAF6EE</item>
    </style>

    <style name="gradient_finish">
        <item name="android:background">@drawable/light_gradient</item>
    </style>

    <style name="toolbar_style">
        <item name="android:background">#F3CB82</item>
    </style>
    <color name="wheat">#F3CB82</color>

    <style name="aboutus_style">
        <item name="android:background">@drawable/light_gradient</item>
    </style>
</resources>